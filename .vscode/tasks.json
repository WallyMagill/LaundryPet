{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build iOS Debug",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project",
        "LaundryPets.xcodeproj",
        "-scheme",
        "LaundryPets",
        "-destination",
        "platform=iOS Simulator,name=iPhone 15",
        "-configuration",
        "Debug",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$xcode"]
    },
    {
      "label": "Build iOS Release",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project",
        "LaundryPets.xcodeproj",
        "-scheme",
        "LaundryPets",
        "-destination",
        "generic/platform=iOS",
        "-configuration",
        "Release",
        "build"
      ],
      "group": "build",
      "problemMatcher": ["$xcode"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "-project",
        "LaundryPets.xcodeproj",
        "-scheme",
        "LaundryPets",
        "clean"
      ],
      "problemMatcher": ["$xcode"]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "xcodebuild",
      "args": [
        "test",
        "-project",
        "LaundryPets.xcodeproj",
        "-scheme",
        "LaundryPets",
        "-destination",
        "platform=iOS Simulator,name=iPhone 15"
      ],
      "group": "test",
      "problemMatcher": ["$xcode"]
    },
    {
      "label": "SwiftLint",
      "type": "shell",
      "command": "swiftlint",
      "args": ["lint", "--config", ".swiftlint.yml"],
      "problemMatcher": {
        "owner": "swiftlint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "Format Swift Code",
      "type": "shell",
      "command": "swiftformat",
      "args": [".", "--config", ".swiftformat"],
      "problemMatcher": []
    }
  ]
}

